<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_default"
        android:paddingEnd="@dimen/padding_default"
        android:paddingBottom="@dimen/padding_default">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="bind" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_isServiceConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="isServiceConnected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deviceId:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="deviceId" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deviceSecret:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_device_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="deviceSecret" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="serverHttpGateway:"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_server_http_gateway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="serverHttpGateway" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="start" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="stop" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_registerConnectedListener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="registerConnectedListener" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_unregisterConnectedListener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="unregisterConnectedListener" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_isConnected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="isConnected" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_getSDKVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_default"
            android:padding="@dimen/padding_default"
            android:text="getSDKVersion" />
    </LinearLayout>
</ScrollView>
